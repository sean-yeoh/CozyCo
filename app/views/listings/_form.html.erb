<%= form_for @listing do |f| %>
  <div class="form-group">
    <%= f.label :text%>
    <%= f.text_field :text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :listing_type_id %>
    <%= f.select :listing_type_id, options_for_select(@listing_types), {}, {class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', min: '0.01', step: '0.01', placeholder: '0.00' %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
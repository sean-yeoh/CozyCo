<div class="text-center" style="padding:30px 0">

  <h1>Edit Notice</h1>
  <%= link_to 'Back', notices_path, class: "btn btn-primary" %>
  <hr>

  <%= form_for :notice, url: notice_path, method: :patch  do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :expiry_date %><br>
      <%= f.date_field :expiry_date %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>




  <hr>


</div>

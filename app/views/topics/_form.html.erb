<%= form_for @topic, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group">
  <%= f.label :name, "Title" %><br>
  <%= f.text_field :name, class: 'form-control' %><br>
</div>
<div class="form-group">
  <%= f.label :content %><br>
  <%= f.text_area :content, class: "form-control", rows: 8 %><br>
</div>
  <%= f.submit class: "btn btn-primary" %>

<% end %>

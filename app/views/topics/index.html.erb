<%= link_to "Create new topic", new_topic_path %>
<div id="topics">
  <% @topics.each do |topic| %>
    <div class="topic">
      <h2 class="title">
        <%= link_to topic.name, topic %>
      </h2>
      <p class="date">
        Published at
        <%= time_ago_in_words(topic.created_at) %>
        ago by
        <%= topic.user.name %>
      </p>
      <p class="count">
      <%= pluralize(topic.comments.count, "comment") %>, 
        last commented
        <%= time_ago_in_words(topic.comments.last.updated_at) %>
        ago by
        <%= topic.comments.last.user.name %>
      </p>
    </div>
  <% end %>
</div>
<h1>Payments#index</h1>
<p>Find me in app/views/payments/index.html.erb</p>


<!-- listing text -->
<!-- listing price -->
<% if flash[:payment] %>
	<%= flash[:payment] %><br>
	<%= link_to "Undo", payments_index_path %>
<% else %>
	<p>Please choose your payment method.</p>
	<form action="decision" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
	<input type="radio" id="cash" name="method" value="Cash">Cash<br>
	<input type="radio" id="credit" name="method" value="Credit">Credit<br>
	<input type="submit" value="Confirm">
	</form>
<% end %>

